<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>onpremises-ide-parent</artifactId>
        <groupId>com.codenvy.onpremises</groupId>
        <version>3.11.0-SNAPSHOT</version>
    </parent>
    <artifactId>onpremises-packaging-tomcat-im</artifactId>
    <packaging>pom</packaging>
    <name>Onpremises IDE :: Tomcat :: IM</name>
    <dependencies>
        <dependency>
            <groupId>com.codenvy.im</groupId>
            <artifactId>installation-manager-server-war</artifactId>
            <version>${codenvy.im.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.platform-api</groupId>
            <artifactId>codenvy-api-docs-ui</artifactId>
            <version>${codenvy.api-docs-ui.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.resources</groupId>
            <artifactId>codenvy-tomcat8-slf4j-logback</artifactId>
            <version>${version.resource-bundle}</version>
            <type>zip</type>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>deploy</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-dependencies-war</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <includeTypes>war</includeTypes>
                                    <stripVersion>true</stripVersion>
                                    <outputDirectory>${project.build.directory}/packager-conf/war</outputDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-dependencies-zip</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <includeTypes>zip</includeTypes>
                                    <stripVersion>true</stripVersion>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>tomcat</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <unzip dest="${project.build.directory}/installation-manager-server-tomcat" src="${project.build.directory}/packager-conf/zip/codenvy-tomcat8-slf4j-logback.zip" />
                                        <move file="${project.build.directory}/packager-conf/war/installation-manager-server-war.war" tofile="${project.build.directory}/installation-manager-server-tomcat/webapps/im.war" />
                                        <!-- Patching Docs service address in the codenvy-api-docs-ui.war/index.html file -->
                                        <unzip dest="${project.build.directory}/packager-conf/war/im-api-docs-ui" src="${project.build.directory}/packager-conf/war/codenvy-api-docs-ui.war" />
                                        <replace file="${project.build.directory}/packager-conf/war/im-api-docs-ui/index.html">
                                            <replacetoken>'/api/docs'</replacetoken>
                                            <replacevalue>'/im/docs'</replacevalue>
                                        </replace>
                                        <move file="${project.build.directory}/packager-conf/war/im-api-docs-ui" tofile="${project.build.directory}/installation-manager-server-tomcat/webapps/im-api-docs-ui" />
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>tomcat-zip</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <appendAssemblyId>false</appendAssemblyId>
                                    <updateOnly>false</updateOnly>
                                    <descriptors>
                                        <descriptor>${project.basedir}/src/main/resources/assembly.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
